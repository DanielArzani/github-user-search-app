{
  "name": "github-user-search-app",
  "version": "1.0.0",
  "description": "A search application for github profiles",
  "main": "index.js",
  "scripts": {
    "doc": "jsdoc -c jsdoc.json",
    "test": "vitest --run --reporter verbose",
    "test-coverage": "vitest --coverage",
    "test-dom": "vitest --run --environment happy-dom",
    "concat-css": "cat src/css/reset.css src/css/global.css src/css/compositions.css src/css/utilities.css src/css/blocks.css src/css/exceptions.css >> src/css/all-styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielArzani/github-user-search-app.git"
  },
  "keywords": [
    "github",
    "search"
  ],
  "author": "Daniel Arzanipour",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DanielArzani/github-user-search-app/issues"
  },
  "homepage": "https://github.com/DanielArzani/github-user-search-app#readme",
  "devDependencies": {
    "@vitest/coverage-c8": "^0.25.1",
    "happy-dom": "^7.6.7",
    "jsdoc": "^4.0.0",
    "vite": "^3.2.3",
    "vitest": "^0.25.1"
  }
}
